<!DOCTYPE html>
<html lang="en" ng-app="littlerex">
  <head>
    <title>Little Rex&rsquo;s Achievements</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body ng-controller="MainCtrl">
    <div class="header">
      <h1>Little Rex&rsquo;s Achievements</h1>
    </div>

    <div ng-repeat="achievement in achievements" class="icon">
      <div ng-click="achievement.selected = false" ng-if="achievement.selected == 1" class="screen">
        <div class="popUp">
          <img src="../images/badge/{{achievement.image}}" alt="{{achievement.name}}">
          <p>
            {{achievement.flavorText}}
          </p>
        </div> <!--popUp-->
      </div> <!--screen-->
      <a href="#" ng-click="achievement.selected = true">
        <img ng-if="achievement.achieved == 1" src="../images/badge/{{achievement.image}}" alt="{{achievement.name}}">
      </a>
      <img ng-if="achievement.achieved == 0" src="../images/badge/toBeAchieved.png" class="greyed" alt="This is yet to be achieved!">
    </div>

    <!--includes-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.28/angular.min.js"></script>
    <script src="/js/index.js"></script>
  </body>
</html>
